@model Etic.Entities.Orders

@{
    ViewData["Title"] = $"Order #{Model.Id}";
    ViewData["Breadcrumb"] = ViewData["Breadcrumb"];
    
    var statusClass = Model.Status switch
    {
        Etic.Entities.Enums.OrderStatus.Pending => "warning",
        Etic.Entities.Enums.OrderStatus.Confirmed => "info",
        Etic.Entities.Enums.OrderStatus.Shipped => "primary",
        Etic.Entities.Enums.OrderStatus.Delivered => "success",
        Etic.Entities.Enums.OrderStatus.Cancelled => "danger",
        Etic.Entities.Enums.OrderStatus.Returned => "secondary",
        _ => "secondary"
    };

    var statusText = Model.Status switch
    {
        Etic.Entities.Enums.OrderStatus.Pending => "Pending",
        Etic.Entities.Enums.OrderStatus.Confirmed => "Confirmed",
        Etic.Entities.Enums.OrderStatus.Shipped => "Shipped",
        Etic.Entities.Enums.OrderStatus.Delivered => "Delivered",
        Etic.Entities.Enums.OrderStatus.Cancelled => "Cancelled",
        Etic.Entities.Enums.OrderStatus.Returned => "Returned",
        _ => "Unknown"
    };

    var paymentText = Model.PaymentType switch
    {
        Etic.Entities.Enums.PaymentType.CashOnDelivery => "Cash on Delivery",
        Etic.Entities.Enums.PaymentType.CreditCard => "Credit Card",
        Etic.Entities.Enums.PaymentType.BankTransfer => "Bank Transfer",
        Etic.Entities.Enums.PaymentType.Iyzico => "Iyzico",
        _ => "Not Specified"
    };

    var orderProducts = ViewBag.OrderProducts as IList<Etic.Entities.OrderProducts>;
}

<!-- Page Actions -->
<div class="d-flex justify-content-end mb-4">
    <a asp-action="Index" class="btn btn-outline-primary me-2">
        <i class="fas fa-arrow-left me-2"></i>Back to Orders
    </a>
    <button onclick="printInvoice()" class="btn btn-outline-secondary">
        <i class="fas fa-print me-2"></i>Print Invoice
    </button>
</div>

<!-- Order Summary -->
<div class="row g-4">
    <!-- Order Info Card -->
    <div class="col-md-4">
        <div class="data-table">
            <div class="table-header">
                <h6 class="mb-0" style="font-weight: 600;">
                    <i class="fas fa-shopping-cart me-2" style="color: var(--primary);"></i>Order Summary
                </h6>
            </div>
            <div class="p-4">
                <div class="mb-4 text-center">
                    <h2 style="font-weight: 700; color: var(--primary); margin-bottom: 8px;">#@Model.Id</h2>
                    <span class="badge badge-@statusClass" style="font-size: 14px; padding: 8px 16px;">
                        @statusText
                    </span>
                </div>

                <div class="mb-3">
                    <label class="form-label text-muted small">Order Date</label>
                    <div style="padding: 12px; background: var(--light-gray); border-radius: 8px;">
                        <i class="fas fa-calendar me-2"></i>
                        <strong>@Model.CreateDate.ToString("dd MMMM yyyy, HH:mm")</strong>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-muted small">Payment Method</label>
                    <div style="padding: 12px; background: var(--light-gray); border-radius: 8px;">
                        <i class="fas fa-credit-card me-2"></i>@paymentText
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-muted small">Total Amount</label>
                    <div style="padding: 12px; background: var(--light-gray); border-radius: 8px; font-weight: 700; font-size: 20px; color: var(--success);">
                        ₺@Model.TotalAmount.ToString("N2")
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.OrderNote))
                {
                    <div class="mb-3">
                        <label class="form-label text-muted small">Order Note</label>
                        <div style="padding: 12px; background: var(--light-gray); border-radius: 8px; font-style: italic;">
                            "@Model.OrderNote"
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Status Update Card -->
        <div class="data-table mt-4">
            <div class="table-header">
                <h6 class="mb-0" style="font-weight: 600;">
                    <i class="fas fa-tasks me-2" style="color: var(--info);"></i>Update Status
                </h6>
            </div>
            <div class="p-4">
                <select id="statusSelect" class="form-select mb-3">
                    <option value="1" selected="@(Model.Status == Etic.Entities.Enums.OrderStatus.Pending)">Pending</option>
                    <option value="2" selected="@(Model.Status == Etic.Entities.Enums.OrderStatus.Confirmed)">Confirmed</option>
                    <option value="3" selected="@(Model.Status == Etic.Entities.Enums.OrderStatus.Shipped)">Shipped</option>
                    <option value="4" selected="@(Model.Status == Etic.Entities.Enums.OrderStatus.Delivered)">Delivered</option>
                    <option value="5" selected="@(Model.Status == Etic.Entities.Enums.OrderStatus.Cancelled)">Cancelled</option>
                    <option value="6" selected="@(Model.Status == Etic.Entities.Enums.OrderStatus.Returned)">Returned</option>
                </select>
                <button onclick="updateOrderStatus()" class="btn btn-primary w-100">
                    <i class="fas fa-check me-2"></i>Update Status
                </button>
            </div>
        </div>
    </div>

    <!-- Customer & Address -->
    <div class="col-md-8">
        <!-- Customer Info -->
        <div class="data-table mb-4">
            <div class="table-header">
                <h6 class="mb-0" style="font-weight: 600;">
                    <i class="fas fa-user me-2" style="color: var(--success);"></i>Customer Information
                </h6>
            </div>
            <div class="p-4">
                <div class="d-flex align-items-center">
                    <!-- Avatar -->
                    <div style="width: 80px; height: 80px; border-radius: 50%; background: linear-gradient(135deg, var(--primary), var(--info)); display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 32px; margin-right: 20px;">
                        @if (Model.User != null)
                        {
                            var initials = $"{Model.User.FirstName?.FirstOrDefault()}{Model.User.LastName?.FirstOrDefault()}";
                            @initials.ToUpper()
                        }
                    </div>
                    <div class="flex-grow-1">
                        <h5 style="font-weight: 600; margin-bottom: 4px;">
                            @(Model.User?.FirstName) @(Model.User?.LastName)
                        </h5>
                        <div class="mb-2">
                            <i class="fas fa-envelope me-2" style="color: var(--gray);"></i>
                            <span style="color: var(--gray);">@(Model.User?.Email)</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.User?.Phone))
                        {
                            <div>
                                <i class="fas fa-phone me-2" style="color: var(--gray);"></i>
                                <span style="color: var(--gray);">@Model.User.Phone</span>
                            </div>
                        }
                    </div>
                    <div>
                        <a asp-controller="User" asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-outline-primary btn-sm">
                            View Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delivery Address -->
        @if (Model.DeliveryAddress != null)
        {
            <div class="data-table mb-4">
                <div class="table-header">
                    <h6 class="mb-0" style="font-weight: 600;">
                        <i class="fas fa-map-marker-alt me-2" style="color: var(--danger);"></i>Delivery Address
                    </h6>
                </div>
                <div class="p-4">
                    <div style="padding: 16px; background: var(--light-gray); border-radius: 8px; border-left: 4px solid var(--danger);">
                        <div style="font-weight: 600; margin-bottom: 8px;">@Model.DeliveryAddress.Title</div>
                        <div style="color: var(--gray); line-height: 1.6;">
                            @Model.DeliveryAddress.Address<br />
                            @Model.DeliveryAddress.District, @Model.DeliveryAddress.City
                            @if (!string.IsNullOrEmpty(Model.DeliveryAddress.PostalCode))
                            {
                                <br /><text>Postal Code: </text>@Model.DeliveryAddress.PostalCode
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Order Products -->
        <div class="data-table">
            <div class="table-header">
                <h6 class="mb-0" style="font-weight: 600;">
                    <i class="fas fa-box me-2" style="color: var(--warning);"></i>Order Items
                </h6>
            </div>
            
            @if (orderProducts != null && orderProducts.Any())
            {
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th style="width: 100px; text-align: center;">Quantity</th>
                            <th style="width: 150px; text-align: right;">Unit Price</th>
                            <th style="width: 150px; text-align: right;">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in orderProducts)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (item.Product?.Images != null && item.Product.Images.Any())
                                        {
                                            <img src="@item.Product.Images.First().ImageUrl" alt="@item.Product.Name" 
                                                 style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px; margin-right: 12px; border: 1px solid var(--border);" />
                                        }
                                        else
                                        {
                                            <div style="width: 60px; height: 60px; background: var(--light-gray); border-radius: 8px; display: flex; align-items: center; justify-content: center; margin-right: 12px;">
                                                <i class="fas fa-image" style="color: var(--gray);"></i>
                                            </div>
                                        }
                                        <div>
                                            <div style="font-weight: 500; color: var(--dark);">@item.Product?.Name</div>
                                            <div style="font-size: 12px; color: var(--gray);">SKU: PROD-@item.ProductId</div>
                                        </div>
                                    </div>
                                </td>
                                <td style="text-align: center; font-weight: 500;">
                                    <span style="background: var(--light-gray); padding: 4px 12px; border-radius: 6px;">
                                        x@item.Quantity
                                    </span>
                                </td>
                                <td style="text-align: right; color: var(--gray);">
                                    ₺@item.Price.ToString("N2")
                                </td>
                                <td style="text-align: right; font-weight: 600; color: var(--dark);">
                                    ₺@((item.Quantity * item.Price).ToString("N2"))
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr style="border-top: 2px solid var(--border);">
                            <td colspan="3" style="text-align: right; font-weight: 600; padding-top: 16px;">
                                Total Amount:
                            </td>
                            <td style="text-align: right; font-weight: 700; font-size: 20px; color: var(--success); padding-top: 16px;">
                                ₺@Model.TotalAmount.ToString("N2")
                            </td>
                        </tr>
                    </tfoot>
                </table>
            }
            else
            {
                <div class="p-4 text-center">
                    <i class="fas fa-box-open" style="font-size: 48px; color: var(--gray); margin-bottom: 16px;"></i>
                    <p style="color: var(--gray);">No products in this order</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Order Timeline (Optional - Placeholder for Future) -->
<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="data-table">
            <div class="table-header">
                <h6 class="mb-0" style="font-weight: 600;">
                    <i class="fas fa-history me-2" style="color: var(--info);"></i>Order Timeline
                </h6>
            </div>
            <div class="p-4">
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-primary"></div>
                        <div class="timeline-content">
                            <div class="timeline-title">Order Placed</div>
                            <div class="timeline-date">@Model.CreateDate.ToString("dd MMM yyyy, HH:mm")</div>
                        </div>
                    </div>
                    @if (Model.Status >= Etic.Entities.Enums.OrderStatus.Confirmed)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-info"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Order Confirmed</div>
                                <div class="timeline-date">@(Model.UpdatedDate?.ToString("dd MMM yyyy, HH:mm") ?? "N/A")</div>
                            </div>
                        </div>
                    }
                    @if (Model.Status >= Etic.Entities.Enums.OrderStatus.Shipped)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-warning"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Shipped</div>
                                <div class="timeline-date">@(Model.UpdatedDate?.ToString("dd MMM yyyy, HH:mm") ?? "N/A")</div>
                            </div>
                        </div>
                    }
                    @if (Model.Status == Etic.Entities.Enums.OrderStatus.Delivered)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Delivered</div>
                                <div class="timeline-date">@(Model.UpdatedDate?.ToString("dd MMM yyyy, HH:mm") ?? "N/A")</div>
                            </div>
                        </div>
                    }
                    @if (Model.Status == Etic.Entities.Enums.OrderStatus.Cancelled)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-danger"></div>
                            <div class="timeline-content">
                                <div class="timeline-title">Cancelled</div>
                                <div class="timeline-date">@(Model.UpdatedDate?.ToString("dd MMM yyyy, HH:mm") ?? "N/A")</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .timeline {
            position: relative;
            padding-left: 40px;
        }
        .timeline:before {
            content: '';
            position: absolute;
            left: 10px;
            top: 10px;
            bottom: 10px;
            width: 2px;
            background: var(--border);
        }
        .timeline-item {
            position: relative;
            margin-bottom: 30px;
        }
        .timeline-marker {
            position: absolute;
            left: -35px;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            border: 3px solid white;
            box-shadow: 0 0 0 2px var(--border);
        }
        .timeline-title {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 4px;
        }
        .timeline-date {
            font-size: 13px;
            color: var(--gray);
        }
    </style>

    <script>
        function updateOrderStatus() {
            const orderId = @Model.Id;
            const newStatus = $('#statusSelect').val();

            if (!confirm('Are you sure you want to update the order status?')) {
                return;
            }

            $.ajax({
                url: '/Admin/Order/UpdateStatus',
                method: 'POST',
                data: {
                    orderId: orderId,
                    status: newStatus
                },
                success: function(result) {
                    if (result.success) {
                        showToast(result.message, 'success');
                        // Reload page to show updated status
                        setTimeout(function() {
                            location.reload();
                        }, 1000);
                    } else {
                        showToast(result.message, 'error');
                    }
                },
                error: function() {
                    showToast('Failed to update order status!', 'error');
                }
            });
        }

        function printInvoice() {
            window.print();
        }
    </script>
}

