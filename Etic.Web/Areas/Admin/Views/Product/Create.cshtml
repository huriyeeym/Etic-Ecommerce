@model Etic.Entities.Product

@{
    ViewData["Title"] = "Create Product";
    ViewData["Breadcrumb"] = "<li class=\"breadcrumb-item\"><a asp-action=\"Index\">Products</a></li><li class=\"breadcrumb-item active\">Create New</li>";
    var categories = ViewBag.Categories as IEnumerable<Etic.Entities.Category>;
}

<!-- Form Container -->
<div class="row">
    <div class="col-12">
        <form asp-area="Admin" asp-action="Create" method="post" enctype="multipart/form-data" id="productForm">
            
            <!-- Tabbed Interface -->
            <div class="data-table mb-4">
                <!-- Tab Navigation -->
                <div class="table-header" style="border-bottom: 2px solid var(--gray-200);">
                    <ul class="nav nav-tabs" style="border-bottom: none; margin-bottom: -2px;">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#general">
                                <i class="fas fa-info-circle me-2"></i>General
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#priceStock">
                                <i class="fas fa-dollar-sign me-2"></i>Price & Stock
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#media">
                                <i class="fas fa-images me-2"></i>Media
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#categories">
                                <i class="fas fa-folder me-2"></i>Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#seo">
                                <i class="fas fa-search me-2"></i>SEO
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Tab Content -->
                <div class="tab-content p-4">
                    <!-- General Tab -->
                    <div class="tab-pane fade show active" id="general">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-4">
                                    <label asp-for="Name" class="form-label" style="font-weight: 500; color: var(--dark);">
                                        Product Name <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control form-control-lg" 
                                           placeholder="e.g. iPhone 14 Pro Max 256GB" 
                                           id="productName"
                                           style="border-radius: 8px; border: 1px solid var(--gray-300); padding: 12px 16px;" />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Description" class="form-label" style="font-weight: 500; color: var(--dark);">
                                        Short Description
                                    </label>
                                    <textarea asp-for="Description" class="form-control" rows="3"
                                              placeholder="Brief product description..."
                                              style="border-radius: 8px; border: 1px solid var(--gray-300); padding: 12px 16px;"></textarea>
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>Appears in product listings
                                    </small>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="ProductDescription" class="form-label" style="font-weight: 500; color: var(--dark);">
                                        Detailed Description
                                    </label>
                                    <textarea asp-for="ProductDescription" class="form-control" rows="6"
                                              placeholder="Full product description with features and specifications..."
                                              style="border-radius: 8px; border: 1px solid var(--gray-300); padding: 12px 16px;"></textarea>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div style="background: var(--light-gray); padding: 20px; border-radius: 8px; border-left: 4px solid var(--info);">
                                    <h6 style="font-weight: 600; margin-bottom: 12px;">
                                        <i class="fas fa-lightbulb me-2" style="color: var(--info);"></i>Tips
                                    </h6>
                                    <ul class="mb-0" style="font-size: 13px; color: var(--gray-600);">
                                        <li class="mb-2">Use clear, descriptive product names</li>
                                        <li class="mb-2">Include key features in short description</li>
                                        <li class="mb-2">Add detailed specs in full description</li>
                                        <li class="mb-0">Use proper formatting for readability</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Price & Stock Tab -->
                    <div class="tab-pane fade" id="priceStock">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="Price" class="form-label" style="font-weight: 500; color: var(--dark);">
                                        Price (₺) <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text" style="border-radius: 8px 0 0 8px; background: var(--light-gray); border: 1px solid var(--gray-300);">
                                            <i class="fas fa-lira-sign"></i>
                                        </span>
                                        <input asp-for="Price" type="number" step="0.01" class="form-control form-control-lg" 
                                               placeholder="0.00" 
                                               id="priceInput"
                                               style="border-radius: 0 8px 8px 0; border: 1px solid var(--gray-300); padding: 12px 16px;" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="Stock" class="form-label" style="font-weight: 500; color: var(--dark);">
                                        Stock Quantity <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text" style="border-radius: 8px 0 0 8px; background: var(--light-gray); border: 1px solid var(--gray-300);">
                                            <i class="fas fa-boxes"></i>
                                        </span>
                                        <input asp-for="Stock" type="number" class="form-control form-control-lg" 
                                               placeholder="0" 
                                               id="stockInput"
                                               style="border-radius: 0 8px 8px 0; border: 1px solid var(--gray-300); padding: 12px 16px;" />
                                    </div>
                                    <span asp-validation-for="Stock" class="text-danger small"></span>
                                    <div id="stockWarning" class="mt-2" style="display: none;"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Price Preview -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div style="background: linear-gradient(135deg, var(--primary-light), var(--primary)); padding: 24px; border-radius: 12px; color: white;">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <small style="opacity: 0.9;">Product Price</small>
                                            <h2 class="mb-0" id="pricePreview" style="font-weight: 700;">₺0.00</h2>
                                        </div>
                                        <div class="col-md-6 text-end">
                                            <small style="opacity: 0.9;">Available Stock</small>
                                            <h2 class="mb-0" id="stockPreview" style="font-weight: 700;">0 units</h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Media Tab -->
                    <div class="tab-pane fade" id="media">
                        <div class="mb-4">
                            <label class="form-label" style="font-weight: 500; color: var(--dark);">
                                Product Images
                            </label>
                            <div class="border rounded" style="border: 2px dashed var(--gray-300) !important; padding: 40px; text-align: center; background: var(--light-gray);">
                                <i class="fas fa-cloud-upload-alt" style="font-size: 48px; color: var(--gray-400); margin-bottom: 16px;"></i>
                                <p style="color: var(--gray-600); margin-bottom: 16px;">
                                    <strong>Drag & drop images here or click to browse</strong>
                                </p>
                                <input type="file" name="Images" class="form-control" multiple accept="image/*" id="imageUpload" 
                                       style="display: none;" />
                                <button type="button" class="btn btn-primary" onclick="document.getElementById('imageUpload').click();">
                                    <i class="fas fa-plus me-2"></i>Select Images
                                </button>
                                <p class="text-muted small mt-3 mb-0">
                                    <i class="fas fa-info-circle me-1"></i>Supports: JPG, PNG, WEBP. Max 5MB per image.
                                </p>
                            </div>
                        </div>
                        
                        <div id="imagePreview" class="row g-3 mt-2"></div>
                    </div>

                    <!-- Categories Tab -->
                    <div class="tab-pane fade" id="categories">
                        <div class="row">
                            <div class="col-md-8">
                                @if (categories != null && categories.Any())
                                {
                                    <div class="row g-3">
                                        @foreach (var category in categories)
                                        {
                                            <div class="col-md-6">
                                                <div class="form-check" style="background: var(--light-gray); padding: 16px; border-radius: 8px; border: 2px solid transparent; transition: all 0.2s;">
                                                    <input type="checkbox" name="CategoryIds" value="@category.Id" 
                                                           class="form-check-input" id="cat-@category.Id" 
                                                           style="width: 20px; height: 20px; margin-top: 0;" />
                                                    <label class="form-check-label" for="cat-@category.Id" style="margin-left: 8px; cursor: pointer; font-weight: 500;">
                                                        <i class="fas fa-folder me-2" style="color: var(--primary);"></i>@category.Name
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="empty-state">
                                        <i class="fas fa-folder-open"></i>
                                        <h5>No Categories Found</h5>
                                        <p>Please create categories first</p>
                                        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                                            <i class="fas fa-plus me-2"></i>Create Category
                                        </a>
                                    </div>
                                }
                            </div>
                            <div class="col-md-4">
                                <div style="background: var(--light-gray); padding: 20px; border-radius: 8px;">
                                    <h6 style="font-weight: 600; margin-bottom: 12px;">
                                        <i class="fas fa-info-circle me-2" style="color: var(--info);"></i>Category Tips
                                    </h6>
                                    <p class="text-muted small mb-2">Select one or more categories for this product.</p>
                                    <p class="text-muted small mb-0">Categories help customers find products easily.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- SEO Tab -->
                    <div class="tab-pane fade" id="seo">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-4">
                                    <label asp-for="SeoLink" class="form-label" style="font-weight: 500; color: var(--dark);">
                                        URL Slug <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="SeoLink" class="form-control form-control-lg" 
                                               placeholder="e.g. iphone-14-pro-max" 
                                               id="seoLinkInput"
                                               style="border-radius: 8px 0 0 8px; border: 1px solid var(--gray-300); padding: 12px 16px;" />
                                        <button type="button" class="btn btn-outline-primary" id="generateSlug" 
                                                style="border-radius: 0 8px 8px 0; border-left: none;">
                                            <i class="fas fa-magic me-1"></i>Auto Generate
                                        </button>
                                    </div>
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>Use lowercase letters, numbers and dashes
                                    </small>
                                    <span asp-validation-for="SeoLink" class="text-danger small d-block"></span>
                                </div>

                                <!-- URL Preview -->
                                <div style="background: var(--light-gray); padding: 20px; border-radius: 8px; border-left: 4px solid var(--success);">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-link me-3 mt-1" style="color: var(--success); font-size: 20px;"></i>
                                        <div style="flex: 1;">
                                            <small class="text-muted d-block mb-2">URL Preview:</small>
                                            <code id="urlPreview" style="font-size: 14px; color: var(--success); word-break: break-all;">yoursite.com/product/</code>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div style="background: var(--light-gray); padding: 20px; border-radius: 8px;">
                                    <h6 style="font-weight: 600; margin-bottom: 12px;">
                                        <i class="fas fa-chart-line me-2" style="color: var(--success);"></i>SEO Tips
                                    </h6>
                                    <ul class="mb-0" style="font-size: 13px; color: var(--gray-600);">
                                        <li class="mb-2">Keep URL short and descriptive</li>
                                        <li class="mb-2">Use relevant keywords</li>
                                        <li class="mb-2">Avoid special characters</li>
                                        <li class="mb-0">Make it easy to read</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Publishing Card -->
            <div class="data-table mb-4">
                <div class="table-header">
                    <h6 class="mb-0" style="font-weight: 600;">
                        <i class="fas fa-globe me-2" style="color: var(--success);"></i>Publishing
                    </h6>
                </div>
                <div class="p-4">
                    <div class="form-check form-switch" style="padding-left: 0;">
                        <label class="form-check-label d-flex align-items-center" style="cursor: pointer;">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked 
                                   style="width: 48px; height: 24px; margin-right: 12px; cursor: pointer;" />
                            <div>
                                <strong>Publish Product</strong>
                                <p class="text-muted small mb-0">Make this product visible on your store</p>
                            </div>
                        </label>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Sticky Form Footer -->
<div class="form-footer">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="d-flex align-items-center" style="color: var(--gray-600);">
                    <i class="fas fa-box me-2"></i>
                    <span id="saveStatus">Creating new product</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-outline-secondary" id="saveDraft">
                        <i class="fas fa-save me-1"></i>Save Draft
                    </button>
                    <a asp-action="Index" class="btn btn-outline-danger">
                        <i class="fas fa-times me-1"></i>Cancel
                    </a>
                    <button type="submit" form="productForm" class="btn btn-primary">
                        <i class="fas fa-check me-1"></i>Create Product
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-tabs .nav-link {
        border: none;
        border-bottom: 3px solid transparent;
        color: var(--gray-600);
        font-weight: 500;
        padding: 12px 20px;
        transition: all 0.2s;
    }
    
    .nav-tabs .nav-link:hover {
        border-color: var(--gray-300);
        color: var(--primary);
    }
    
    .nav-tabs .nav-link.active {
        border-color: var(--primary);
        color: var(--primary);
        background: none;
    }
    
    .form-check:has(input:checked) {
        background: rgba(79, 70, 229, 0.1) !important;
        border-color: var(--primary) !important;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const productName = document.getElementById('productName');
            const seoLinkInput = document.getElementById('seoLinkInput');
            const urlPreview = document.getElementById('urlPreview');
            const priceInput = document.getElementById('priceInput');
            const stockInput = document.getElementById('stockInput');
            const pricePreview = document.getElementById('pricePreview');
            const stockPreview = document.getElementById('stockPreview');
            const stockWarning = document.getElementById('stockWarning');
            const imageUpload = document.getElementById('imageUpload');
            const imagePreview = document.getElementById('imagePreview');
            
            // Auto-generate slug
            productName.addEventListener('input', function() {
                if (seoLinkInput.value === '' || seoLinkInput.dataset.autoGenerated === 'true') {
                    generateSlug();
                    seoLinkInput.dataset.autoGenerated = 'true';
                }
            });
            
            document.getElementById('generateSlug').addEventListener('click', function() {
                generateSlug();
                seoLinkInput.dataset.autoGenerated = 'true';
            });
            
            seoLinkInput.addEventListener('input', function() {
                seoLinkInput.dataset.autoGenerated = 'false';
                updateUrlPreview();
            });
            
            function generateSlug() {
                const name = productName.value;
                if (name) {
                    const slug = name
                        .toLowerCase()
                        .replace(/ğ/g, 'g')
                        .replace(/ü/g, 'u')
                        .replace(/ş/g, 's')
                        .replace(/ı/g, 'i')
                        .replace(/ö/g, 'o')
                        .replace(/ç/g, 'c')
                        .replace(/[^a-z0-9\s-]/g, '')
                        .replace(/\s+/g, '-')
                        .replace(/-+/g, '-')
                        .replace(/^-|-$/g, '');
                    
                    seoLinkInput.value = slug;
                    updateUrlPreview();
                }
            }
            
            function updateUrlPreview() {
                const slug = seoLinkInput.value || '';
                urlPreview.textContent = 'yoursite.com/product/' + (slug || '[slug]');
            }
            
            // Price preview
            priceInput.addEventListener('input', function() {
                const price = parseFloat(this.value) || 0;
                pricePreview.textContent = '₺' + price.toFixed(2);
            });
            
            // Stock preview
            stockInput.addEventListener('input', function() {
                const stock = parseInt(this.value) || 0;
                stockPreview.textContent = stock + ' units';
                
                if (stock === 0) {
                    stockWarning.style.display = 'block';
                    stockWarning.innerHTML = '<div class="alert alert-danger mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Product will be marked as out of stock!</div>';
                } else if (stock <= 10) {
                    stockWarning.style.display = 'block';
                    stockWarning.innerHTML = '<div class="alert alert-warning mb-0"><i class="fas fa-exclamation-circle me-2"></i>Low stock warning will be shown.</div>';
                } else {
                    stockWarning.style.display = 'none';
                }
            });
            
            // Image upload
            imageUpload.addEventListener('change', function(e) {
                imagePreview.innerHTML = '';
                const files = e.target.files;
                
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        const col = document.createElement('div');
                        col.className = 'col-md-2';
                        col.innerHTML = `
                            <div class="card" style="border-radius: 8px; overflow: hidden;">
                                <img src="${e.target.result}" class="card-img-top" style="height: 150px; object-fit: cover;">
                                <div class="card-body p-2 text-center" style="background: var(--light-gray);">
                                    <small class="text-muted d-block text-truncate" style="font-size: 11px;">${file.name}</small>
                                    <small class="text-muted" style="font-size: 10px;">${(file.size / 1024).toFixed(1)} KB</small>
                                </div>
                            </div>
                        `;
                        imagePreview.appendChild(col);
                    };
                    
                    reader.readAsDataURL(file);
                }
            });
            
            // Save draft
            document.getElementById('saveDraft').addEventListener('click', function() {
                const formData = {
                    name: productName.value,
                    seoLink: seoLinkInput.value,
                    price: priceInput.value,
                    stock: stockInput.value,
                    timestamp: new Date().toISOString()
                };
                
                localStorage.setItem('productDraft', JSON.stringify(formData));
                showToast('Draft saved!', 'success');
            });
            
            // Initial
            updateUrlPreview();
        });
    </script>
}
